



<table id="table_style", align="right">
            <div><tr>
            <td><%= form_tag search_path do %></td>
            <td><%= select :user, :search, User.select("distinct sex").collect(&:sex), :prompt => "Select Gender" %></td>
            <td><%= submit_tag "Search", class: "btn btn-success", :place => nil %></td>
            <% end %>
            </tr>
</table>


<table id="table_style", align="center">
<tr><ul>
  <% @users.each do |user| %>
  <li><p><%= link_to user.name, :action => 'show', :id => user.id %></li></p>
  
  <% end %>

</tr></ul>
</table>